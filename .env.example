# OpenWeatherMap API configuration
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Server port (optional, default: 8080)
# PORT=8080

# Reminders feature (optional, default: true)
REMINDERS_ENABLED=true

# Database path (optional, default: reminders.db)
# REMINDERS_DB_PATH=reminders.db

# Email notification settings
# For Gmail: Use port 587 with STARTTLS (recommended) or port 465 with SSL
# You need to generate an App Password in your Google Account settings
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Telegram notification settings
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# DeepSeek AI Agent settings
AGENT_ENABLED=false
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
