# OpenWeatherMap API configuration
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Server port (optional, default: 8080)
# PORT=8080

# Default timezone (optional, default: Europe/Moscow which is UTC+3)
# Use IANA timezone names like: Europe/Moscow, America/New_York, Asia/Tokyo, etc.
DEFAULT_TIMEZONE=Europe/Moscow

# Tasks feature (optional, default: true)
TASKS_ENABLED=true

# Database path (optional, default: tasks.db)
# TASKS_DB_PATH=tasks.db

# Telegram notification settings
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# DeepSeek AI Agent settings
AGENT_ENABLED=false
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
